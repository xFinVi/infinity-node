
<%- include('./includes/header') %>

    <div class="hero-news overlay" style="background-image: url('images/infinity/inifnitybanner.jpg');">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-5 mx-auto text-center">
            <h1 class="text-white">News</h1>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Soluta, molestias repudiandae pariatur.</p>
          </div>
        </div>
      </div>
    </div>

    <div class="col-6 title-section w-100 d-flex justify-content-center m-auto ">
      <h2 class="heading mt-5">Latest News</h2>
    </div>
    
    <div class="container">
      <div class="row w-100 m-0 justify-content-center gap-5">
       <% posts.forEach(post => {%>
        <div class="col-lg-3 col-md-4 col-sm-12 p-0">
          <div class="custom-media d-flex flex-column align-items-center">
            <div class="img mb-4" style="background-image: url(<%=post.image%>);">
              <a href="/news/<%=post._id%>"></a>
            </div>
            <div class="text">
              <span class="meta"><%= new Date().toLocaleDateString() %></span>  
              <p><%=post.description.substr(0,50)%> <a href="/news/<%=post._id%>" class="read-more" >Read more</a></p>
              <div class="links">         

              <% if(isAuthenticated && isAdmin) {%>
                <form action="/delete" class="delete d-flex justify-content-end" method="POST">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <input type="hidden" value="<%= post._id %>" name="postId">
                  <a href="admin/edit-post/<%=post._id%>?edit=true" class="edit-icon"><ion-icon name="create"></ion-icon></a>
                  <button type="submit" class="delete-icon"><ion-icon name="trash" ></ion-icon></button>
                </form>
              <%}%>
              </div>
              
            </div>
          </div>
        </div>
      <% })%>

 
      </div>
    </div>


    
    
<%- include('./includes/footer') %>