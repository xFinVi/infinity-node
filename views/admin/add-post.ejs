


<%- include('../includes/header') %>
<form action=""></form>
<form class="form mt-5" action="/admin/<% if (editing || hasError) { %>edit-post<% } else { %>add-post<% } %>" method="POST">
  <div class="form-titles mr-5 ml-5 text-center">
    <H2 class="text-center"><% if(editing){%>Edit a Post <% } else {%>Add a New post <%}%> </H2>
    
    <%if(errorMessage){ %>
      <div class="user-message user-message--error"><%= errorMessage %></div>
      <% }%>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-6  p-2  m-auto">
    
 
     
      <div class="form-group">
        <label for="title">Add a title</label>
    <input type="text" class="form-control" name="title" value="<%if(editing || hasError){%><%=post.title%><%}%>">
      </div>
      <div class="form-group">
        <label for="photo">Add a photo</label>
    <input type="text" class="form-control" name="photo" value="<%if(editing || hasError){%><%=post.image%><%}%>">
      </div>


      <div class="form-group">
        <label for="description">Add a description</label>
        <input type="text" class="form-control" name="description" value="<%if(editing || hasError){%><%=post.description%><%}%>">
      </div>
      <% if (editing || hasError) { %>
        <input type="hidden"  name='postId' value="<%= post._id %>">
        
    <% } %>
      
      <div class="form-group text-center d-flex justify-content-between" >
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="btn btn-primary"><% if (editing) { %>Update<% } else { %>Add Post<% } %></button>
        <button class="btn btn-secondary">Back</button>
      </div>

  </div>
  </form>
<%- include('../includes/footer') %>

