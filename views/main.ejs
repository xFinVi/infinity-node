<%- include('./includes/header') %>

  <div class="hero overlay" style="background-image: url('/images/infinity/gamephotos1.jpg')">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-5 ml-auto">
          <h2 class="text-white landing-title">
            WELCOME TO THE OFFICIAL WEB PAGE OF INFINITY FC
          </h2>
          <p class="landing-p">
            Lorem ipsum dolor sit amet,ipisicing elit.
            Soluta, ariatur.
          </p>

          <p class="landing-p">
            <a href="#" class="btn btn-primary py-3 px-4 mr-3">Next Fixture</a>
            <a href="#news" class="more light">News</a>
          </p>
        </div>
      </div>
    </div>
  </div>





  <div class="container p-3">
    <div class="row justify-content-center align-items-center m-auto">
      <div class="col-lg-6 col-sm-12 w-100 p-0 bg-dark">
        <div class="widget-next-match w-100">
          <div class="widget-title">
            <h3>Last Game</h3>
          </div>
          <div class="widget-body mb-3 w-100">
            <div class="widget-vs">
              <div class="d-flex align-items-center justify-content-between w-100 p-2">
                <div class="team-1 text-center flex-fill">

                  <h3>TWITTER TEAM </h3>
                </div>
                <div>
                  <span class="vs  flex-fill"><span>4-0</span></span>
                </div>
                <div class="team-2 text-center  flex-fill">

                  <h3>TWITTER TEAM 2</h3>
                </div>
              </div>
            </div>
          </div>

          <div class="text-center widget-vs-contents mb-4">
            <h4>SAT 19 AUG 2023</h4>
            <p class="mb-5">
              <span class="d-block">Hampshire League</span>


            </p>
          </div>
        </div>
      </div>

    </div>
  </div>

  <div class="latest-news" id="news">
    <div class="container">
      <div class="row">
        <div class="col-12 title-section">
          <h2 class="heading">Latest News</h2>
        </div>
      </div>
      <div class="row justify-content-between">

        <% posts.forEach(post=> {%>

          <div class="col-lg-4 col-md-6 ">

            <div class="post-entry">
              <a href="/news/<%=post._id%>">   <img src="<%= post.image %>" alt="Image" />  </a>
            
            </div>

            
              <div class="caption p-3 text-center">            
                  <a href="/latest-news/<%=post._id %>">
                    <h3 class="mb-2"><%=post.title%></h3>
                  </a>     
                  <small><%= new Date().toLocaleDateString() %></small>          
              </div>

           

          </div>


          <% } ) %>

      </div>
    </div>
  </div>

  <div class="twitter-container">
    <a class="twitter-timeline" data-lang="en" href="https://twitter.com/Infinity_f_c?ref_src=twsrc%5Etfw">Tweets by
      Infinity_f_c</a>
    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
  </div>



